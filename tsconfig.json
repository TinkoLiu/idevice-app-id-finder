{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "module": "Node16",
    "moduleResolution": "Node16",
    "baseUrl": "src",
    "declaration": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "files": [
    "./src/cli.ts",
    "./src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}